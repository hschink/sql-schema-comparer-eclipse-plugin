<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="sqlSchemaComparerBuilder"
         name="Sql Schema Comparer Builder"
         point="org.eclipse.core.resources.builders">
      <builder
            hasNature="true">
         <run
               class="org.iti.sqlschemacomparerplugin.builder.SqlSchemaComparerBuilder">
         </run>
      </builder>
   </extension>
   <extension
         id="sqlSchemaComparerNature"
         name="Sql Schema Comparer Nature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="org.iti.sqlschemacomparerplugin.builder.SqlSchemaComparerNature">
         </run>
      </runtime>
      <builder
            id="org.iti.sqlSchemaComparerPlugin.sqlSchemaComparerBuilder">
      </builder>
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            adaptable="true"
            objectClass="org.eclipse.core.resources.IProject"
            nameFilter="*"
            id="org.iti.sqlSchemaComparerPlugin.contribution1">
         <action
               label="Add/Remove SQL Schema Comparer"
               class="org.iti.sqlschemacomparerplugin.builder.ToggleNatureAction"
               menubarPath="additions"
               enablesFor="+"
               id="org.iti.sqlSchemaComparerPlugin.addRemoveNatureAction">
         </action>
      </objectContribution>
   </extension>
   <extension
         id="sqlStatementProblem"
         name="SQL Statement Problem"
         point="org.eclipse.core.resources.markers">
      <super
            type="org.eclipse.core.resources.problemmarker">
      </super>
      <persistent
            value="true">
      </persistent>
   </extension>
   <extension
         id="jpaEntityDefinitionProblem"
         name="JPA Entity Definition Problem"
         point="org.eclipse.core.resources.markers">
      <super
            type="org.eclipse.core.resources.problemmarker">
      </super>
      <persistent
            value="true">
      </persistent>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="org.iti.sqlschemacomparerplugin"
            name="SQL Schema Comparer">
      </category>
      <view
            category="org.iti.sqlschemacomparerplugin"
            class="org.iti.sqlschemacomparerplugin.views.SchemaModificationsView"
            icon="icons/sample.gif"
            id="org.iti.sqlschemacomparerplugin.view"
            name="SQL Schema Modifications"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
      </perspectiveExtension>
   </extension>

</plugin>
